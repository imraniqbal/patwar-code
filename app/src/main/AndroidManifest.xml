<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imran.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.imran.patwarcalculator.RectangularArea"
            android:label="Area of Rectangular Field"
            android:screenOrientation="portrait"
            android:parentActivityName="com.example.imran.patwarcalculator.MainActivity">

        </activity>
        <activity
            android:name="com.example.imran.patwarcalculator.TriangularArea"
            android:label="@string/title_activity_main_activity2"
            android:screenOrientation="portrait"
            android:parentActivityName="com.example.imran.patwarcalculator.MainActivity">
        </activity>

        <activity
            android:name="com.example.imran.patwarcalculator.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
